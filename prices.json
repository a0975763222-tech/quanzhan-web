name: 銓展通訊旗艦更新流程
on:
  schedule:
    - cron: '0 0 * * *' # 台北時間早上 08:00
  workflow_dispatch:
jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - uses: actions/checkout@v3
      - name: Setup Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'
      - name: Run Crawler
        run: python crawler.py
      - name: Commit and Push
        run: |
          git config --global user.name "Quanzhan-Bot"
          git config --global user.email "bot@quanzhan-telecom.com"
          git add prices.json
          git commit -m "每日報價自動同步: $(date)" || exit 0
          git push
